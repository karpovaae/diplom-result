	// Конец СтандартныеПодсистемы.ПодключаемыеКоманды
	
	
	//ВКМ
	//Добавление кнопки "Заполнить"
	КомандаЗаполнить = Команды.Добавить("ВКМ_Заполнить");
	КомандаЗаполнить.Заголовок = "Заполнить";
	КомандаЗаполнить.Действие = "Заполнить";
	
	КнопкаЗаполнить = Элементы.Вставить("ВКМ_Заполнить", Тип("КнопкаФормы"), КоманднаяПанель);
	КнопкаЗаполнить.ИмяКоманды = "ВКМ_Заполнить";
	КнопкаЗаполнить.Вид = ВидКнопкиФормы.ОбычнаяКнопка;		
	
КонецПроцедуры

